@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Список ответов";
}

@model IEnumerable<Prac7_MVC.Models.Person>
@if (Model.Count() == 0)
{
    <h2>Нет ответов</h2>
}
else
{
    <h2>Ответы</h2>
    <table class="table">
        <tr>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Номер телефона</td>
            <td>Email</td>
            <td>Придет</td>
        </tr>
        @foreach(Prac7_MVC.Models.Person person in Model)
        {
            <tr>
                <td>@person.Surname</td>
                <td>@person.Name</td>
                <td>@person.Patronymic</td>
                <td>@person.PhoneNumber</td>
                <td>@person.Email</td>
                <td>@person.WillCome</td>
            </tr>
        }
    </table>
}
