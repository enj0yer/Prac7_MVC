<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <style>
        .header {
            display: flex;
            width: 1000px;
            justify-content: space-evenly;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <button type="button" class="btn btn-dark">@Html.ActionLink("Главная", "Index", "Home")</button>
            <button type="button" class="btn btn-dark">@Html.ActionLink("Заполнить форму", "Form", "Home")</button>
            <button type="button" class="btn btn-dark">@Html.ActionLink("Посмотреть все ответы", "CheckAll", "Home")</button>

        </div>
    </div>
    @RenderBody()
    <script src='@Url.Content("~/Scripts/jquery-1.8.2.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
</body>
</html>
